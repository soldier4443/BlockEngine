<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.midasit.blockengine.SyncTestActivity">

  <com.midasit.blockengine.RenderingView
    android:id="@+id/rendering_view_1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toTopOf="@+id/rendering_view_3"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/rendering_view_2"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/text_view_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:textColor="@android:color/black"
    android:textSize="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/rendering_view_1"
    app:layout_constraintLeft_toLeftOf="@+id/rendering_view_1"
    app:layout_constraintRight_toRightOf="@+id/rendering_view_1"
    tools:text="x1"/>

  <com.midasit.blockengine.RenderingView
    android:id="@+id/rendering_view_2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toTopOf="@+id/rendering_view_4"
    app:layout_constraintLeft_toRightOf="@+id/rendering_view_1"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/text_view_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:textColor="@android:color/black"
    android:textSize="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/rendering_view_2"
    app:layout_constraintLeft_toLeftOf="@+id/rendering_view_2"
    app:layout_constraintRight_toRightOf="@+id/rendering_view_2"
    tools:text="x1"/>

  <com.midasit.blockengine.RenderingView
    android:id="@+id/rendering_view_3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toTopOf="@+id/button_list"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/rendering_view_4"
    app:layout_constraintTop_toBottomOf="@+id/rendering_view_1"/>

  <TextView
    android:id="@+id/text_view_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:textColor="@android:color/black"
    android:textSize="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/rendering_view_3"
    app:layout_constraintLeft_toLeftOf="@+id/rendering_view_3"
    app:layout_constraintRight_toRightOf="@+id/rendering_view_3"
    tools:text="x1"/>

  <com.midasit.blockengine.RenderingView
    android:id="@+id/rendering_view_4"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toTopOf="@+id/button_list"
    app:layout_constraintLeft_toRightOf="@+id/rendering_view_3"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/rendering_view_2"/>

  <TextView
    android:id="@+id/text_view_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:textColor="@android:color/black"
    android:textSize="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/rendering_view_4"
    app:layout_constraintLeft_toLeftOf="@+id/rendering_view_4"
    app:layout_constraintRight_toRightOf="@+id/rendering_view_4"
    tools:text="x1"/>

  <LinearLayout
    android:id="@+id/button_list"
    android:layout_width="0dp"
    android:layout_height="64dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <Button
      android:id="@+id/button_1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="prev"/>

    <Button
      android:id="@+id/button_2"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="next"/>

  </LinearLayout>

</android.support.constraint.ConstraintLayout>
